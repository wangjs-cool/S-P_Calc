<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wjs.calc">

    <application
        android:allowBackup="false"
        android:icon="@drawable/calc"
        android:label="@string/app_name"
        android:roundIcon="@drawable/calc"
        android:supportsRtl="true">
        <activity
            android:name=".SciCalc"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Sidebar"
            android:theme="@style/SideBarActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".PgCalc"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".HisRec"
            android:theme="@style/dialogActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Document"
            android:theme="@style/DocumentActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>